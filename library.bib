file = {:C$\backslash$:/Users/hgriesba/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/De Micco et al. - 2016 - Intra-annual density fluctuations in tree rings How, when, where, and why.pdf:pdf},
issn = {22941932},
journal = {IAWA Journal},
keywords = {Boreal climate,Cambial activity,Double rings,False rings,Intra-annual density fluctuations (IADFs),Mediterranean ecosystems,Temperate zones,Tropics},
number = {2},
pages = {232--259},
title = {{Intra-annual density fluctuations in tree rings: How, when, where, and why?}},
