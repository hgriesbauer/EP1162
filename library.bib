keywords = {Quercus alba,biomass increment,climate-growth relations,dendrochronology,integrated moisture index},
pages = {120--128},
title = {{Dendrochronological analysis of white oak growth patterns across a topographic moisture gradient in southern Ohio}},
url = {http://dx.doi.org/10.1016/j.dendro.2012.10.002},
volume = {31},
year = {2013}
