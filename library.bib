journal = {Forest Ecology and Management},
keywords = {Acer saccharum,Betula alleghaniensis,Post-cut growth,Pre-cut growth,Selection cutting,Stand structure,Thinning,Tree leaf area,Tree selection},
number = {March},
pages = {118115},
publisher = {Elsevier},
title = {{Changes in growth dominance after partial cuts in even- and uneven-aged northern hardwood stands}},
