doi = {10.1371/journal.pone.0185604},
file = {:C$\backslash$:/Users/hgriesba/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Carnwath, Nelson - 2017 - Effects of biotic and abiotic factors on resistance versus resilience of Douglas fir to drought.pdf:pdf},
