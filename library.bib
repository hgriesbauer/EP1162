doi = {10.1111/geb.12395},
file = {:C$\backslash$:/Users/hgriesba/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Talluto et al. - 2016 - Cross-scale integration of knowledge for predicting species ranges A metamodelling framework.pdf:pdf},
isbn = {1466-822X},
