file = {:C$\backslash$:/Users/hgriesba/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Rakthai et al. - 2020 - Increased Drought Sensitivity Results in a Declining Tree Growth of Pinus latteri in Northeastern Thailand.pdf:pdf},
issn = {1999-4907},
journal = {Forests},
keywords = {Pinus latteri,Thailand,climate change,climate-growth response,moisture availability,sensitivity,tree rings},
number = {3},
pages = {361},
title = {{Increased Drought Sensitivity Results in a Declining Tree Growth of Pinus latteri in Northeastern Thailand}},
url = {www.mdpi.com/journal/forests},
volume = {11},
year = {2020}
