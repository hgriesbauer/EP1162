number = {May},
pages = {139--157},
publisher = {Elsevier},
title = {{Linking forest growth with stand structure: Tree size inequality, tree growth or resource partitioning and the asymmetry of competition}},
url = {https://doi.org/10.1016/j.foreco.2019.05.053},
volume = {447},
year = {2019}
}
