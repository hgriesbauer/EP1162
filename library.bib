file = {:C$\backslash$:/Users/hgriesba/Google Drive/Papers/Feuilletetal2020-JBI.pdf:pdf},
issn = {13652699},
journal = {Journal of Biogeography},
keywords = {densification,join count statistics,multinomial model,spatial context,tree line,upshift},
number = {January},
title = {{Spatial dynamics of alpine tree lines under global warming: What explains the mismatch between tree densification and elevational upward shifts at the tree line ecotone?}},
year = {2019}
}
