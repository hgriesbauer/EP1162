journal = {Forest Ecology and Management},
keywords = {British Columbia,Climate change,Douglas-fir,Forestry,Provenance,Tree-rings},
number = {3},
pages = {589--600},
title = {{Using a spatiotemporal climate model to assess population-level Douglas-fir growth sensitivity to climate change across large climatic gradients in British Columbia, Canada}},
