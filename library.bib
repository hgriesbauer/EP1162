journal = {Journal of Oceanography},
keywords = {⋅ IPO,⋅ NPO,⋅ PDO,⋅ Regime shift,⋅ climate impacts,⋅ fishery oceanogra-phy},
pages = {35--44},
title = {{The Pacific Decadal Oscillation}},
url = {https://link.springer.com/article/10.1023/A:1015820616384},
