file = {:C$\backslash$:/Users/hgriesba/Google Drive/Papers/Mclean{\_}{\_}et{\_}al{\_}incr{\_}climate{\_}ecol{\_}appl{\_}2011.pdf:pdf},
issn = {10510761},
journal = {Ecological Applications},
keywords = {Basal area increment,British Columbia,Climate change,Lodgepole pine,Provenance trial,Quantitative genetics,Radial growth,Random coefficient model,Universal response function},
month = {apr},
